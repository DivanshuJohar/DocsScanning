<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:background="@drawable/view_data_border_layout">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/documentList_image"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/customwhite"
        app:strokeWidth="5dp"
        tools:srcCompat="@drawable/ic_baseline_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_margin="10dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/documentList_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/documentList_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:text="TextView" />

    </LinearLayout>
</LinearLayout>